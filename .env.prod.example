# Domain
API_DOMAIN=api.example.com

# MySQL container initialization
MYSQL_ROOT_PASSWORD=replace-this-root-password
MYSQL_DATABASE=bajiaozhi
MYSQL_USER=app
MYSQL_PASSWORD=replace-this-app-password

# App runtime config
MYSQL_DSN=app:replace-this-app-password@tcp(mysql:3306)/bajiaozhi?parseTime=true&multiStatements=true
REDIS_ADDR=redis:6379
REDIS_PASSWORD=
REDIS_DB=0
PUBLIC_BASE_URL=https://api.example.com
MEDIA_CACHE_DIR=/data/media-cache

# Admin auth
ADMIN_USERNAME=ops-admin
ADMIN_PASSWORD_HASH=$$2y$$10$$replace-with-bcrypt-hash
ADMIN_JWT_SECRET=replace-with-a-long-random-secret

# Optional summary config
SUMMARY_PROVIDER=openai
SUMMARY_API_BASE=https://api.openai.com/v1
SUMMARY_API_KEY=

# Optional proxy
HTTP_PROXY=
HTTPS_PROXY=
NO_PROXY=localhost,127.0.0.1,mysql,redis
