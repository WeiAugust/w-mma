.page {
  padding: 24rpx;
}

.hero {
  margin-bottom: 20rpx;
  background: linear-gradient(135deg, #0f172a, #1e293b);
  color: #f8fafc;
}

.hero__title {
  font-size: 34rpx;
  font-weight: 600;
}

.hero__meta {
  margin-top: 12rpx;
  font-size: 24rpx;
  opacity: 0.8;
}

.state {
  text-align: center;
  margin-top: 20rpx;
}

.list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.article__title {
  font-size: 30rpx;
  font-weight: 600;
  color: #0f172a;
}

.article__summary {
  margin-top: 12rpx;
  font-size: 26rpx;
  color: #334155;
  line-height: 1.5;
}

.link {
  margin-top: 16rpx;
  border-radius: 999rpx;
  border: 1rpx solid #0f172a;
  color: #0f172a;
  background: transparent;
  font-size: 24rpx;
}
