.page {
  padding: 24rpx;
}

.head {
  margin-bottom: 20rpx;
  background: linear-gradient(145deg, #172554 0%, #1d4ed8 100%);
  color: #eff6ff;
}

.head__title {
  font-size: 34rpx;
  font-weight: 600;
}

.head__meta {
  margin-top: 10rpx;
  font-size: 24rpx;
  opacity: 0.85;
}

.filter {
  margin-top: 16rpx;
  display: inline-block;
  font-size: 24rpx;
  padding: 10rpx 20rpx;
  border-radius: 999rpx;
  background: rgba(255, 255, 255, 0.16);
}

.state {
  text-align: center;
}

.list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.event {
  overflow: hidden;
  padding: 0;
}

.event__poster {
  width: 100%;
  height: 320rpx;
  border-radius: 20rpx 20rpx 0 0;
}

.event__body {
  padding: 22rpx 24rpx 24rpx;
  background: linear-gradient(180deg, #ffffff 0%, #f8fafc 100%);
}

.event__org {
  display: inline-block;
  font-size: 22rpx;
  padding: 6rpx 14rpx;
  border-radius: 999rpx;
  background: #e2e8f0;
  color: #1e293b;
}

.event__name {
  margin-top: 12rpx;
  font-size: 30rpx;
  font-weight: 600;
}

.event__meta {
  margin-top: 14rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 12rpx;
}

.event__status {
  font-size: 22rpx;
  padding: 6rpx 14rpx;
  border-radius: 999rpx;
  border: 1rpx solid transparent;
}

.event__status--scheduled {
  background: #eaf2ff;
  border-color: #c7d9f9;
  color: #1e3a8a;
}

.event__status--completed {
  background: #edf7ef;
  border-color: #cfe7d5;
  color: #166534;
}

.event__status--live {
  background: #fff4e8;
  border-color: #f9d8b7;
  color: #9a3412;
}

.event__status--unknown {
  background: #f1f5f9;
  border-color: #d1d8e0;
  color: #334155;
}

.event__time {
  font-size: 24rpx;
  color: #475569;
}
