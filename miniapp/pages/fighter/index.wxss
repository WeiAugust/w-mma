.page {
  padding: 24rpx;
}

.state {
  text-align: center;
}

.detail {
  background: linear-gradient(135deg, #ecfeff 0%, #e0f2fe 100%);
}

.avatar {
  width: 220rpx;
  height: 220rpx;
  border-radius: 999rpx;
  margin-bottom: 16rpx;
}

.name {
  font-size: 38rpx;
  font-weight: 700;
  color: #0c4a6e;
}

.name-zh {
  margin-top: 8rpx;
  font-size: 26rpx;
  color: #0e7490;
}

.nickname {
  margin-top: 8rpx;
  display: inline-block;
  padding: 4rpx 14rpx;
  border-radius: 999rpx;
  background: rgba(14, 116, 144, 0.14);
  color: #0f766e;
  font-size: 23rpx;
}

.meta {
  margin-top: 10rpx;
  font-size: 26rpx;
  color: #155e75;
}

.intro-video {
  width: 100%;
  height: 320rpx;
  border-radius: 14rpx;
  margin-top: 14rpx;
}

.section {
  margin-top: 18rpx;
  font-size: 28rpx;
  font-weight: 600;
  color: #164e63;
}

.kv-row {
  margin-top: 10rpx;
  padding: 12rpx 14rpx;
  border-radius: 12rpx;
  background: rgba(255, 255, 255, 0.56);
  display: flex;
  justify-content: space-between;
  gap: 16rpx;
}

.kv-label {
  color: #0f766e;
  font-size: 24rpx;
}

.kv-value {
  color: #0c4a6e;
  font-size: 24rpx;
  font-weight: 600;
}

.update {
  margin-top: 10rpx;
  font-size: 25rpx;
  color: #0f766e;
}
