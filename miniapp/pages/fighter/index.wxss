.page {
  padding: 24rpx;
}

.state {
  text-align: center;
}

.detail {
  background: linear-gradient(135deg, #ecfeff 0%, #e0f2fe 100%);
}

.avatar {
  width: 220rpx;
  height: 220rpx;
  border-radius: 999rpx;
  margin-bottom: 16rpx;
}

.name {
  font-size: 38rpx;
  font-weight: 700;
  color: #0c4a6e;
}

.meta {
  margin-top: 10rpx;
  font-size: 26rpx;
  color: #155e75;
}

.intro-video {
  width: 100%;
  height: 320rpx;
  border-radius: 14rpx;
  margin-top: 14rpx;
}

.section {
  margin-top: 18rpx;
  font-size: 28rpx;
  font-weight: 600;
  color: #164e63;
}

.update {
  margin-top: 10rpx;
  font-size: 25rpx;
  color: #0f766e;
}
