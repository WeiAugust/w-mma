.page {
  padding: 24rpx;
}

.search {
  margin-bottom: 20rpx;
  background: linear-gradient(135deg, #fef2f2 0%, #ffe4e6 100%);
}

.search__input {
  padding: 14rpx 18rpx;
  border-radius: 12rpx;
  background: #ffffff;
  font-size: 27rpx;
}

.search__button {
  margin-top: 14rpx;
  border-radius: 999rpx;
  background: #9f1239;
  color: #ffffff;
  font-size: 26rpx;
}

.state {
  text-align: center;
}

.list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.fighter__name {
  font-size: 30rpx;
  font-weight: 600;
  color: #881337;
}

.fighter__alias {
  margin-top: 8rpx;
  font-size: 24rpx;
  color: #9f1239;
}

.fighter__meta {
  margin-top: 10rpx;
  font-size: 24rpx;
  color: #9f1239;
}
